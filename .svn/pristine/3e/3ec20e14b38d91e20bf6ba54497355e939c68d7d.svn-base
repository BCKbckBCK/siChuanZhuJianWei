// cover some element-ui styles
.el-breadcrumb__inner,
.el-breadcrumb__inner a {
    font-weight: 400 !important;
}

.el-upload {
    input[type="file"] {
        display: none !important;
    }
}

.el-upload__input {
    display: none;
}

// to fixed https://github.com/ElemeFE/element/issues/2461
.el-dialog {
    transform: none;
    left: 0;
    position: relative;
    margin: 0 auto;
}

// refine element ui upload
.upload-container {
    .el-upload {
        width: 100%;
        .el-upload-dragger {
            width: 100%;
            height: 200px;
        }
    }
}

// dropdown
.el-dropdown-menu {
    a {
        display: block;
    }
}

// el-tag success
.el-tag.el-tag--success {
    width: 90%;
    color: #004c77;
    background-color: #baf5b9;
}

// el-tag primary
.el-tag.el-tag--primary {
    width: 90%;
    color: #004c77;
    background-color: #a2dbfd;
}
.el-tag.el-tag--warning {
    width: 90%;
    color: #004c77;
    background-color: rgb(255, 201, 201);
}

.el-form-item {
    margin-bottom: 0px;
}

.el-input__inner {
    padding: 0 4px;
}

.el-form-item__label {
    padding: 0 4px 0 0;
}

.el-popper[x-placement^="bottom"] {
    margin-top: 4px;
}

.el-table .cell,
.el-table th div {
    // overflow:visible;
    white-space: nowrap;
    display: inline-block;
    padding: 0 0px;
    display: block;
    line-height: 30px;
    text-align: center;
}

.el-table th>.cell {
    overflow: visible;
    white-space: nowrap;
    padding: 0 4px;
    font-weight: 600;
}

.el-table th {
    background-color: #f5f7fa;
}

.el-table td,
.el-table th {
    height: 70px;
    padding: 0px 0px;
}

.el-card__body {
    padding: 0px;
}

.el-table .cell>span {
    padding: 0 4px;
}

// el-tab el-tag 标签
.el-table .cell>span {
    line-height: 46px;
    height: 46px;
    font-size: 16px;
}

.el-button {
    vertical-align: middle;
    border-radius: 0;
    font-size: 16px;
    height: 40px;
    .el-button {
        border-radius: 0;
        font-size: 16px;
    }
    .el-button--primary {
        background-color: #3e97df;
        vertical-align: middle;
    }
    .el-button--primary:hover {
        background-color: #3784c2;
    }
    .el-input--small .el-input__inner {
        height: 40px;
        line-height: 40px;
        font-size: 16px;
        width: 16em;
    }
    .el-table .cell>span {
        line-height: 40px;
        font-size: 16px;
    }
}

.el-input--small .el-input__inner {
    height: 40px;
    font-size: 16px;
    line-height: 40px;
}

.el-button--primary {
    background-color: #3e97df;
    vertical-align: middle;
}

.el-button--primary:hover {
    background-color: #3784c2;
    vertical-align: middle;
}